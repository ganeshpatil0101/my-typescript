    "target": "ES5",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "build"
  },
  "filesGlob": [
    "lib/**/*.ts",
    "test/**/*.ts",
    "!node_modules/**/*.ts"
  ],
  "files": [
    "lib/Addition.ts",
    "lib/all.d.ts",
    "lib/core.ts",
    "lib/my-typescript.ts",
    "lib/Person.ts",
    "test/AdditionTest.ts",
    "test/core.ts",
    "test/PersonTest.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
